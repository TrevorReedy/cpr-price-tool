{
  "manifest_version": 3,
  "name": "Mobile Sentrix CPR Repair Calculator + Notes",
  "version": "0.1.0",
  "description": "Displays repair pricing and adds per-device notes on supported supplier sites.",

  "permissions": ["storage"],

  "host_permissions": [
    "*://*.cpr.parts/*",
    "*://*.mobiledefenders.com/*",
    "*://*.mobilesentrix.com/*",
    "*://www.ifixit.com/*"
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Repair Tools"
  },

  "options_page": "src/popup/options.html",

  "content_scripts": [
    {
      "matches": [
        "*://*.cpr.parts/*",
        "*://*.mobiledefenders.com/*",
        "*://*.mobilesentrix.com/*"
      ],
      "js": [
        "src/laborConfig.js",
        "src/repairCalc/repairCart.js",
        "src/inject/notes.js",
        "src/inject/helper.js",
        "src/inject/inject.js"
      ],
      "css": ["src/inject/inject.css", "src/repairCalc/repairCart.css"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/tag-price16.png",
    "48": "icons/tag-price48.png",
    "128": "icons/tag-price128.png"
  }
}
